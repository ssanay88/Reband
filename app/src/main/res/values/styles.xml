<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CareerRangeSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <item name="colorOnPrimary">@color/mainThemeColor</item>
        <item name="colorOnBackground">@color/grayBackground</item>
        <item name="colorSurface">@color/mainThemeColor</item>
    </style>

    <style name="NoneSelectedRoundButtonTextStyle">
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">6dp</item>
    </style>

    <style name="SelectedRoundButtonTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">6dp</item>
    </style>

    <style name="LocationSpinnerDivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="divider"> @color/grayLine</item> <!-- divider 색 -->
        <item name="android:dividerHeight">1dp</item> <!-- divider 높이 -->
    </style>

    <style name="LocationSpinnerTheme">
        <item name="dropDownListViewStyle">@style/LocationSpinnerDivideStyle</item>
    </style>

</resources>