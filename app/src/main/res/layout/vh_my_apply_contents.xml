<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingHorizontal="10dp">

    <TextView
        android:id="@+id/tv_band_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="밴드명" />

    <TextView
        android:id="@+id/tv_apply_detail"
        app:layout_constraintStart_toEndOf="@id/tv_band_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:text="공고 상세보기 >"
        android:background="@drawable/outline_textview_bg"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_state_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_apply_state_wait_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp"
        android:text="대기"
        android:textColor="@color/myApplyStateWaitText"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_state_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_apply_state_cancel_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp"
        android:text="취소"
        android:textColor="@color/myApplyStateCancelText"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_state_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_apply_state_reject_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp"
        android:text="거절"
        android:textColor="@color/myApplyStateRejectText"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_state_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_apply_state_complete_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp"
        android:text="완료"
        android:textColor="@color/myApplyStateCompleteText"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>