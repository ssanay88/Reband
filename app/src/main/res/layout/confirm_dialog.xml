<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/round_corner_dialog_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_confirm_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="확인"
        android:textColor="@color/mainThemeColor"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_confirm_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="확인 내용"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_dialog_title" />

    <View
        android:id="@+id/div_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grayLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_dialog_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_confirm_dialog_close"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingHorizontal="90dp"
        android:text="닫기"
        android:textColor="@color/grayText"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_confirm_dialog_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div_line" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_confirm_dialog_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_bottom_right_corner_btn_bg"
        android:gravity="center"
        android:paddingHorizontal="90dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_confirm_dialog_close"
        app:layout_constraintTop_toBottomOf="@id/div_line" />

</androidx.constraintlayout.widget.ConstraintLayout>